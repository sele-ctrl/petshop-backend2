doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title Productos - Huellitas Felices
    link(href="https://fonts.googleapis.com/css2?family=Winky+Rough&display=swap", rel="stylesheet")
    style.
      body {
        background-color: #121212;
        font-family: 'Winky Rough', cursive;
        color: #f5f5f5;
        text-align: center;
        padding: 2rem;
      }
      h1 {
        font-size: 3rem;
        color: #6c63ff;
        text-shadow: 0 0 25px #6c63ff;
        margin-bottom: 1rem;
      }
      h2 {
        font-size: 1.5rem;
        color: #aaaaaa;
        margin-bottom: 2rem;
      }
      ul {
        list-style: none;
        padding: 0;
      }
      li {
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        margin: 10px auto;
        padding: 15px;
        max-width: 400px;
        box-shadow: 0 0 15px rgba(0,0,0,0.2);
        transition: 0.3s ease;
      }
      li:hover {
        transform: scale(1.02);
        box-shadow: 0 0 25px #6c63ff;
      }
      form {
        margin-top: 1rem;
      }
      input {
        padding: 10px;
        border-radius: 8px;
        border: none;
        margin: 5px;
        width: 200px;
      }
      button {
        background-color: #6c63ff;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        margin: 5px;
      }
      .formulario {
        margin-top: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

  body
    h1 Huellitas Felices
    h2 Productos en stock
    ul
      each producto in productos
        li
          | #{producto.nombre} - Precio: $#{producto.precio} - Stock: #{producto.stock}
          form(action=`/productos/eliminar/${producto._id}`, method="post")
            button(type="submit") Quitar producto

    h2 Agregar nuevo producto
    form(class="formulario", method="post", action="/productos")
      input(type="text", name="nombre", placeholder="Nombre", required)
      input(type="number", name="precio", placeholder="Precio", required)
      input(type="number", name="stock", placeholder="Stock", required)
      button(type="submit") Agregar producto

    br
    a.boton(href="/usuario/usuarioRegistrado") Volver


