doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title PetShop
    link(href="https://fonts.googleapis.com/css2?family=Winky+Rough&display=swap", rel="stylesheet")
    style.
      body {
        background-color: #121212;
        font-family: 'Winky Rough', cursive;
        color: #f5f5f5;
        text-align: center;
        padding: 2rem;
      }
      nav a {
        margin: 0 1rem;
        color: #a280ff;
        font-weight: bold;
        text-decoration: none;
      }
  body
    if !session.usuario
      nav
        if path !== "/usuario/login"
          a(href="/usuario/login") Iniciar sesión
        if path !== "/usuario/registro"
          a(href="/usuario/registro") Registrarse
    else
      nav
        a(href="/perfil") Perfil
        a(href="/logout") Cerrar sesión

    block content
