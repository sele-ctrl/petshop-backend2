doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title PetShop
    link(href="https://fonts.googleapis.com/css2?family=Winky+Rough&display=swap", rel="stylesheet")
    style.
      body {
        background-color: #121212;
        font-family: 'Winky Rough', cursive;
        color: #f5f5f5;
        text-align: center;
        padding: 2rem;
      }
      .navbar-custom {
        background: linear-gradient(90deg, #1e1e1e 0%, #6c63ff 100%);
        border-radius: 12px;
        margin-bottom: 2rem;
        padding: 0.5rem 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 0 20px #6c63ff33;
      }
      .navbar-custom a {
        color: #f5f5f5;
        font-weight: bold;
        text-decoration: none;
        margin: 0 1.2rem;
        transition: color 0.2s;
        font-size: 1.1rem;
      }
      .navbar-custom a:hover {
        color: #a280ff;
        text-shadow: 0 0 8px #6c63ff;
      }
  body
    nav.navbar-custom
      if session && session.usuario
        a(href="/") Inicio
        a(href="/vista-mascotas") Mascotas
        a(href="/vista-productos") Productos
        a(href="/vista-turnos") Turnos
        a(href="/logout") Cerrar sesión
      else
        a(href="/usuario/login") Iniciar sesión
        a(href="/usuario/registro") Registrarse
    .container.mt-4
      block content
