doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title Iniciar sesión
    link(href="https://fonts.googleapis.com/css2?family=Winky+Rough&display=swap", rel="stylesheet")
    style.
      body {
        background-color: #121212;
        font-family: 'Winky Rough', cursive;
        color: #f5f5f5;
        text-align: center;
        padding: 2rem;
      }
      h1 {
        font-size: 3rem;
        color: #6c63ff;
        text-shadow: 0 0 25px #6c63ff;
        margin-bottom: 1rem;
      }
      input {
        padding: 10px;
        border-radius: 8px;
        border: none;
        margin: 10px;
        width: 200px;
      }
      button {
        padding: 10px 20px;
        border: none;
        background-color: #6c63ff;
        color: white;
        border-radius: 8px;
        cursor: pointer;
      }
  body
    h1 Iniciar sesión
    form(action="/usuario/login", method="POST")
      input(type="text", name="usuario", placeholder="Usuario")
      br
      input(type="password", name="password", placeholder="Contraseña")
      br
      button(type="submit") Ingresar
    br
    a(href="/usuario/registro") Registrate
