doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        title Productos - Huellitas Felices
        link(href="https://fonts.googleapis.com/css2?family=Winky+Rough&display=swap", rel="stylesheet")
        style.
            body {
                background-color: #121212;
                font-family: 'Winky Rough', cursive;
                color: #f5f5f5;
                text-align: center;
                padding: 2rem;
            }

            h1 {
                font-size: 3rem;
                color: #6c63ff;
                text-shadow: 0 0 25px #6c63ff;
                margin-bottom: 1rem;
            }
            h2 {
                font-size: 1.5rem;
                color: #aaaaaa;
                margin-bottom: 2rem;
            }
            ul {
                list-style: none;
                padding: 0;
            }
            li {
                background-color: rgba(255, 255, 255, 0.05);
                border-radius: 12px;
                margin: 10px auto;
                padding: 15px;
                max-width: 400px;
                box-shadow: 0 0 15px rgba(0,0,0,0.2);
                transition: 0.3s ease;
            }
            li:hover {
                transform: scale(1.02);
                box-shadow: 0 0 25px #6c63ff;
            }

    body
        if session && session.usuario
            p Bienvenido #{session.usuario}
            a(href="/logout") Cerrar sesión
        else
            a(href="/usuario/login") Iniciar sesión
        h1 Huellitas Felices
        h2 Turnos registrados
        each turno in turnos
            li Mascota: #{turno.mascota} - Servicio: #{turno.servicio} - Fecha: #{turno.fecha} - Hora: #{turno.hora}
